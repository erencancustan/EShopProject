    <script>

        function AddToCart(id){
         $.post('@Url.Action("AddToCart", "Product")',
        {
            productId: id,
            quantity:  '1'
        },
        function(data,status){
            $(document.getElementsByClassName('MyBasket')).html(data);
        });
          };

    </script>

