@using EShopProject.DataAccess.Entity
@model List<Category>

<ul class="nav navbar-nav navbar-left">
    <li class="active">
        <a href="@Url.Action("Index","Home")"><span class="lbl">Ana Sayfa</span></a>
    </li>
    @for (int i = 0; i < Model.Count; i++)
    {
        <li>
            <a href="@Url.Action("Index", "Product", new { id = Model[i].Id })" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="200">@(Model[i].Name)<b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>
                    <div class="yamm-content">
                        <div class="row">
                            <div class="col-sm-3">
                                <a href="@Url.Action("Index", "Product", new { id = @Model[i].Id })"><h5>@Model[i].Name</h5></a>
                                <ul>
                                    @for (int j = 0; j < Model[i].SubCategories.Count; j++)
                                    {
                                        <li>
                                            <a href="@(Url.Action("Index", "Product", new { id = @Model[i].SubCategories[j].Id }))">@Model[i].SubCategories[j].Name</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </li>
    }
</ul>