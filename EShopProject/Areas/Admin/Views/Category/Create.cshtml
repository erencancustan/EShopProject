@using EShopProject.DataAccess.Entity
@model Category

@Html.Partial("_TitleAndMessageDisplay")

<div class="col-xs-8">
    @using (Html.BeginForm("Save", "Category", FormMethod.Post))
    {
        @Html.HiddenFor(c => c.Id)
        <div class="form-group">
            @Html.LabelFor(c => c.Name, "Kategori Adı")
            @Html.TextBoxFor(c => c.Name, new { @class = "form-control", required = "required", @maxlength = "30" })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Description, "Kategory Açıklaması")
            @Html.TextAreaFor(c => c.Description, new { @class = "form-control", required = "required", @maxlength = "1000" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ParentId, "Üst Kategorisi")
            @Html.DropDownListFor(m => m.ParentId, (SelectList)ViewBag.CategorySelectList, string.Empty, new { @class = "form-control" })
        </div>
        if (@Model.Id != 0 && Model.Deleted == true)
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Deleted, "Silindi")
                @Html.EditorFor(m => m.Deleted, new { @class = "form-control" })
            </div>
        }
        <div class="form-group pull-right">
            @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-default" })
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    }

</div>